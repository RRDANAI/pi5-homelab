# PostgreSQL Database Configuration
# Root user credentials for PostgreSQL (used for initial setup)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=n8n

# Non-root PostgreSQL user for n8n application
POSTGRES_NON_ROOT_USER=n8n
POSTGRES_NON_ROOT_PASSWORD=your_n8n_database_password_here

# n8n Encryption Key
# IMPORTANT: Generate a random encryption key using:
# openssl rand -hex 32
# Keep this key safe - losing it means you can't decrypt stored credentials!
ENCRYPTION_KEY=your_encryption_key_here
